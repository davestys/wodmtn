<div class="row">
  <div class="twelve columns">
      <%= link_to "Add Workout", new_workout_path, class: "btn btn-success"%>
      <h1>My Workouts</h1>
      <h3>Total Wods: <%= @workouts.count %></h3>

      <hr />
      <% @workouts.each do |workout| %>
          <strong><%= workout.location %></strong>

          <p><%= time_ago_in_words(workout.date) + " ago" %><br />
          <%= workout.notes %></p>
          <div class="meta">
            <%= link_to "Show", workout %>
            <span class="admin">
              | <%= link_to "Edit", edit_workout_path(workout) %>
              | <%= link_to "Delete", workout, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
          </div>
          <hr />
      <% end %>
  </div>
</div>