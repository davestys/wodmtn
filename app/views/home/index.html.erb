<div class="row">
	<div class="four columns">
		<div class="panel centered">
			<% if !user_signed_in? %>
				<h1>Welcome!</h1>
				<%= simple_form_for("user", :url => user_session_path) do |f| %>
				  <%= f.text_field :email %>
				  <%= f.password_field :password %>
				  <%= f.check_box :remember_me %>
				  <%= f.label :remember_me %>
				  <%= f.submit 'Sign in' %>
				  <%= link_to "Forgot your password?", new_password_path('user') %>
				<% end %>
			<% else %>
				<h2>Welcome Back</h2>
			<% end %>
		</div>
	</div>
</div>
